@using GameDeckWebApplication.Models


@model JeuVM

@{
    string title =  $"{Model?.Nom}";
    ViewBag.Title = $"Détail " + title;
}

<div class="mx-auto mt-5 align-self-center align-items-center border">
    <div class="justify-content-center text-center">
        <h1>@title</h1>
        <p>Sortie le @Model.DateSortie.ToString("dd/MM/yyyy")</p>
    </div>
    <div>
        <div class="d-flex flex-row justify-content-center gap-3">
            <p class="text-end">Editeur</p>
            <p class="text-start">@Model.EditeurObj</p>
        </div>
        <div class="d-flex flex-row justify-content-center gap-3">
            <p class="text-end">a</p>
            <p class="text-start">b</p>
        </div>
    </div>
    <div class="border border-primary rounded-2 mx-auto p-2 bg-primary bg-opacity-25">
        <p>@Model.Description</p>
    </div>
</div>
